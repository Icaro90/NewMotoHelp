<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.icaro.newmotohelp.Fragment.PerguntasFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtQuestion1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/fundo_texto"
                android:gravity="center_vertical"
                android:text="Qual estilo de moto você mais gosta?"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/rdg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rdb1Naked"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Naked" />

                <RadioButton
                    android:id="@+id/rdb1Street"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Street"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/rdb1Trail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Trail / Off" />

                <RadioButton
                    android:id="@+id/rdb1Esportiva"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Esportiva" />

                <RadioButton
                    android:id="@+id/rdb1Custom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Custom" />

                <RadioButton
                    android:id="@+id/rdb1Scooter"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Scooter" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtQuestion2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fundo_texto"
                android:gravity="center_vertical"
                android:text="Pra qual finalidade vai usar sua moto?"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/rdg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rdb2Lazer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Lazer" />

                <RadioButton
                    android:id="@+id/rdb2Trabalho"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Trabalho" />

                <RadioButton
                    android:id="@+id/rdb2Trail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Trail / Trilha" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtQuestion3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fundo_texto"
                android:gravity="center_vertical"
                android:text="Quanto está disposto a investir?"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/rdg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rdb3Ate23"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Até 23 Mil" />

                <RadioButton
                    android:id="@+id/rdb3Acima23"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Acima de 23 Mil" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtQuestion4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fundo_texto"
                android:gravity="center_vertical"
                android:text="Na maior parte do tempo, anda acompanhado?"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/rdg4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rdb4Acompanhado"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Acompanhado" />

                <RadioButton
                    android:id="@+id/rdb4Sozinho"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Sozinho" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtQuestion5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/fundo_texto"
                android:gravity="center_vertical"
                android:text="Você gosta de velocidade ou anda mais tranquilo?"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/rdg5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rdb5Ate80"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Ate 80 Km/h" />

                <RadioButton
                    android:id="@+id/rdb5Acima80"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Acima de 80 Kmm/h" />
            </RadioGroup>

            <Button
                android:id="@+id/Botao1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="54dp"
                android:layout_marginRight="54dp"
                android:layout_marginTop="138dp"
                android:layout_weight="0.26"
                android:text="Resultado" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
